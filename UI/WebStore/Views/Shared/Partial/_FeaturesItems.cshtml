@model IEnumerable<WebStore.Domain.ViewModels.ProductViewModel>

@{
    var is_brand = Context.Request.Query.ContainsKey("BrandId");
}

<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Features Items</h2>

    @foreach (var product in Model)
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    @if (is_brand)
                    {
                        <div class="productinfo text-center">
                            <a asp-controller="Catalog" asp-action="ProductDetails" 
                               asp-route-id="@product.Id" asp-route-FromBrand="true">
                                <img src="~/images/shop/@product.ImageUrl" alt="" />
                                <h2>@product.Price.ToString("C")</h2>
                                <p>@product.Name</p>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="productinfo text-center">
                            <a asp-controller="Catalog" asp-action="ProductDetails" asp-route-id="@product.Id">
                                <img src="~/images/shop/@product.ImageUrl" alt="" />
                                <h2>@product.Price.ToString("C")</h2>
                                <p>@product.Name</p>
                            </a>
                            <a class="btn btn-default add-to-cart CallAddToCart" href="#" data-id="@product.Id">
                                <i class="fa fa-shopping-cart"></i>
                                Добавить в корзину
                            </a>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <a asp-controller="Catalog" asp-action="ProductDetails" asp-route-id="@product.Id">
                                    <h2>@product.Price.ToString("C")</h2>
                                    <p>@product.Name</p>
                                </a>
                                <a class="btn btn-default add-to-cart CallAddToCart" href="#" data-id="@product.Id">
                                    <i class="fa fa-shopping-cart"></i>
                                    Добавить в корзину
                                </a>
                            </div>
                        </div>
                    }
                </div>
                <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                        <li><a href="#"><i class="fa fa-plus-square"></i>Добавить в список желаний</a></li>
                        <li><a href="#"><i class="fa fa-plus-square"></i>Добавить к сравнению</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div><!--features_items-->